number = (1..10)
numberOfCol=(1..12)
whatColor=hsl(95, 56%, 54%)
whatColor2=hsl(60, 100%, 93%)
whatColor3=hsl(40, 97%, 62%)
step = 100/length(number)
stepCol = 100/length(numberOfCol)


for i in number
    .primary-color-{i}
        color:lightness(whatColor, step*i)
    .primary-color-bg-{i}
        background-color:lightness(whatColor, step*i)
    .secondary-color-{i}
        color:lightness(whatColor, step*i)
    .secondary-color-bg-{i}
        background-color:lightness(whatColor, step*i)
    .ternary-color-{i}
        color:lightness(whatColor, step*i)
    .ternary-color-bg-{i}
        background-color:lightness(whatColor, step*i)
for i in numberOfCol
    .col-{i}
        width: stepCol*i+"%"
